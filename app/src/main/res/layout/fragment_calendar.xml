<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    tools:ignore="ExtraText">

    <!-- Auto layout, variables, and unit scale are not yet supported -->


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="285dp"
        android:layout_height="297dp"
        android:background="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"
        tools:ignore="MissingConstraints" />



    <RelativeLayout
        android:id="@+id/today_food"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toTopOf="@+id/today_work"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintVertical_bias="0.545"
        tools:ignore="MissingConstraints"

        android:onClick="showFoodOfToday"
        android:clickable="true"
        android:focusable="true"

        >


        <View
            android:id="@+id/image_2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/triangle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/food_id"
            android:layout_width="87dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="오늘의 식단"
            android:textAppearance="@style/some_id" />


        <!-- Add OnClickListener to the layout -->



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/today_work"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toTopOf="@+id/today_body"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintVertical_bias="0.794"
        tools:ignore="MissingConstraints"

        android:onClick="showWorkOfToday"
        android:clickable="true"
        android:focusable="true"
        >


        <View
            android:id="@+id/image_46"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/triangle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/work_id"
            android:layout_width="87dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="오늘의 운동"
            android:textAppearance="@style/some_id" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/today_body"
        android:layout_width="155dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintVertical_bias="0.878"
        tools:ignore="MissingConstraints"

        android:onClick="showInbodyOfToday"
        android:clickable="true"
        android:focusable="true">



        <View
            android:id="@+id/image_47"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/triangle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/body_id"
            android:layout_width="87dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="오늘의 인바디"
            android:textAppearance="@style/some_id" />

    </RelativeLayout>

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="281dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pt_"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="148dp"
        android:alpha="0.5"
        android:gravity="top"
        android:hint="PT쌤의 피드백..."
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

