<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <CalendarView
        android:id="@+id/trainer_calendar"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_calendar"
        app:layout_constraintVertical_bias="0.312">

        <ImageButton
            android:id="@+id/trainer_todo_add_button"
            android:contentDescription="add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:src="@android:drawable/ic_menu_add"
            android:layout_gravity="right"/>

        <ListView
            android:id="@+id/trainer_todo_listview"
            android:layout_width="360dp"
            android:layout_height="270dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/calendar_todo_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Sample text ... "
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>